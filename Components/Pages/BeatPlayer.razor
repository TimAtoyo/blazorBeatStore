        <span>@FormatTime(CurrentTime) / @FormatTime(Duration)</span>
    </div>

    <!-- Volume & Loop -->
    <div class="flex items-center gap-4 mt-4">
        <input type="range" min="0" max="1" step="0.1" @bind="Volume" class="w-20" />
        <label>ğŸ”Š Volume</label>

